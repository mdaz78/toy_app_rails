<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>

  <strong>Microposts:</strong>
  <table>
    <tr>
      <td>ID</td>
      <td>Content</td>
      <td>user_id</td>
    </tr>
    <% @user.microposts.each do |micropost| %>
    <tr>
      <td><%= micropost.id %></td>
      <td><%= micropost.content %></td>
      <td><%= micropost.user_id %></td>
    </tr>
    <% end %>
  </table>

</p>

<%= link_to 'Edit', edit_user_path(@user) %> |
